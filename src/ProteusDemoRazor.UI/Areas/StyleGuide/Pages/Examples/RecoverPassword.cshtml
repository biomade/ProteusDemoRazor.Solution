@page
@model Proteus.UI.Areas.StyleGuide.Pages.Examples.RecoverPasswordModel
@{
    //this tells the system to NOT use the _layout page in the shared folder!
    Layout = "";
}
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>AdminLTE 3 | Recover Password</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <environment names="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
            <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
            <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.css">
            <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
            <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css" asp-append-version="true" />
        </environment>

        <environment names="Development">
            <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
            <script src="~/lib/bootstrap/js/bootstrap.js" asp-append-version="true"></script>
            <script src="~/lib/admin-lte/js/adminlte.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
            <script src="~/lib/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
            <script src="~/lib/admin-lte/isjs/adminlte.min.js" asp-append-version="true"></script>
        </environment>
    </head>

    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>Admin</b>LTE</a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

                    <form action="login.html" method="post">
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="Confirm Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Change password</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <p class="mt-3 mb-1">
                        <a asp-area="StyleGuide" asp-page="/examples/login">Login</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
    </body>
    </html>