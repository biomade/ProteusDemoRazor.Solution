@page
@model Proteus.UI.Areas.Identity.Pages.UserRoles.DeleteModel

@{
    ViewData["Title"] = "Delete User Role";
}


<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Delete User Role</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" role="form">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                Role Name
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.Role.Name)
                            </dd>
                            <dt class="col-sm-2">
                                User Name
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.User.UserName)
                            </dd>
                            <dt class="col-sm-2">
                                User Email
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Input.User.Email)
                            </dd>
                            
                        </dl>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <input type="hidden" asp-for="Input.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </form>

            </div>
            <!-- /.card -->
        </div>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
