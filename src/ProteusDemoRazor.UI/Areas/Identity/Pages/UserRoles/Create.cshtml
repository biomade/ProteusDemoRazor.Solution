@page
@model Proteus.UI.Areas.Identity.Pages.UserRoles.CreateModel

@{
    ViewData["Title"] = "Create User Role";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Create User Role</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">User </label>
                            <select asp-for="UserRole.UserId" class="form-control" asp-items="ViewBag.UserId">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="UserRole.UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Role</label>
                            <select asp-for="UserRole.RoleId" class="form-control" asp-items="ViewBag.RoleId">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="UserRole.RoleId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />&nbsp;&nbsp;
                            <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
