@page
@model Proteus.UI.Areas.Identity.Pages.Account.AccountDisabledModel
@{
    ViewData["Title"] = "Log out";
    //this tells the system to NOT use the _layout page in the shared folder!
    Layout = "";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - Proteus Demo Razor</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css" asp-append-version="true" />
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/admin-lte/js/adminlte.min.js" asp-append-version="true"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Proteus Demo</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="lockscreen-item">
                    <br />
                    <p class="text-center">Account Disabled</p>
                    <p class="text-center"> Your account is currently DISABLED and has to be approved. You will be notified when your account has been enabled. </p>
                    <br />
                    <div class="text-center">
                        <a asp-page="./login" class="text-center">Login</a>
                    </div>
                    <br />
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->
</body>
</html>