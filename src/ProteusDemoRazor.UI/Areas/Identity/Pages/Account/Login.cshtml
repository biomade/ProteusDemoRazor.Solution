@page
@model Proteus.UI.Areas.Identity.Pages.Account.LoginModel
@{
    //this tells the system to NOT use the _layout page in the shared folder!
    //the login page does not use the default layout as we don't want any pages
    //exposed until the user is authorized and authenticated
    Layout = "";
    ViewData["Title"] = "Login";
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - Proteus Demo Razor</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css" asp-append-version="true" />
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/admin-lte/js/adminlte.min.js" asp-append-version="true"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Proteus Demo</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                @Html.ValidationSummary(false)                
                <p class="login-box-msg">Sign in to start your session</p>
                <form method="post" role="form">
                    <div class="input-group mb-3">
                        <input type="text" asp-for="Input.UserName" class="form-control" placeholder="UserName">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-alt"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <p class="mb-1">
                    If you do not want to register, use one of these logins:
                    <br />
                    Admin/Fluxgate1!
                    <br />
                    Mary.Lamb/Fluxgate1!
                    <br />
                </p>
                <p class="mb-1">
                    @*<a asp-area="Identity" asp-page="/Account/forgotpassword" class="nav-link">I forgot my password</a>*@
                </p>
                <p class="mb-0">

                    <a class="nav-link" asp-page="./Register">Register</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
</body>
</html>
