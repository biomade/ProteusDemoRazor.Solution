@page
@model Proteus.UI.Areas.Identity.Pages.Account.Manage.UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">User Profile</h3>
                </div>
                <!-- /.card-header -->
                <form method="post" role="form">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-content-below-home-tab" data-toggle="pill" href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home" aria-selected="true">User Info.</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">User Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-content-below-messages-tab" data-toggle="pill" href="#custom-content-below-messages" role="tab" aria-controls="custom-content-below-messages" aria-selected="false">Govt. Info.</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="custom-content-below-tabContent">
                                <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
                                    <br />
                                    <div class="form-group">
                                        <label for="Input.UserName" class="control-label">UserName: </label>
                                        @Html.DisplayFor(model => model.Input.UserName)
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.FirstName" class="control-label"> First Name</label>
                                        <input asp-for="Input.FirstName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.MI" class="control-label">M.I.</label>
                                        <input asp-for="Input.MI" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.LastName" class="control-label">Last Name</label>
                                        <input asp-for="Input.LastName" class="form-control" />
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab">
                                    <br />
                                    <div class="form-group">
                                        <label asp-for="Input.Email" class="control-label">Email</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Phone" class="control-label">Phone </label>
                                        <input type="text" class="form-control" asp-for="Input.Phone" placeholder="Phone">
                                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-content-below-messages" role="tabpanel" aria-labelledby="custom-content-below-messages-tab">
                                    <br />
                                    <div class="form-group">
                                        <label asp-for="Input.GovPOCName" class="control-label">Gov. POC Name </label>
                                        <input type="text" class="form-control" asp-for="Input.GovPOCName" placeholder="GovPOCName">
                                        <span asp-validation-for="Input.GovPOCName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.GovPOCEmail" class="control-label">Gov. POC Email </label>
                                        <input type="text" class="form-control" asp-for="Input.GovPOCEmail" placeholder="GovPOCEmail">
                                        <span asp-validation-for="Input.GovPOCEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.GovPOCPhoneNumber" class="control-label">Gov. POC Phone </label>
                                        <input type="text" class="form-control" asp-for="Input.GovPOCPhoneNumber" placeholder="GovPOCPhoneNumber">
                                        <span asp-validation-for="Input.GovPOCPhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />   
                    </div>
                    <div class="card-footer">
                        <input type="hidden" asp-for="Input.UserName" />
                        <input type="hidden" asp-for="Input.Id" />
                        <input type="hidden" asp-for="Input.EDI" placeholder="EDI">
                        <input type="hidden" asp-for="Input.PasswordHash" placeholder="EDI">
                        <button type="submit" class="btn btn-primary">Submit</button>&nbsp;&nbsp;
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>