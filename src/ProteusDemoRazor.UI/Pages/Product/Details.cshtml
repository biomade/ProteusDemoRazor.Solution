@page
@model Proteus.UI.Pages.Product.DetailsModel
@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Product Details</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label for="Product.ProductName" class="control-label">Product Name</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.QuantityPerUnit" class="control-label"> Quantity/Unit</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.QuantityPerUnit)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.UnitPrice" class="control-label">Unit Price</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.UnitPrice)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.UnitsInStock" class="control-label">Units in Stock</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.UnitsInStock)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.UnitsOnOrder" class="control-label">Units on Order</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.UnitsOnOrder)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.ReorderLevel" class="control-label">Reorder Level</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.ReorderLevel)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.Discontinued" class="control-label">Discontinued</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.Discontinued)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="Product.CategoryId" class="control-label">Category</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.Category.CategoryName)
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-productId="@Model.Product.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>