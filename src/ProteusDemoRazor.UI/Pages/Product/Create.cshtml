@page
@model Proteus.UI.Pages.Product.CreateModel
@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Create Product</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" role="form">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label for="ProductVM.ProductVMName" class="control-label">ProductVM Name</label>
                            <input asp-for="ProductVM.ProductName" class="form-control" type="text" />
                            <span asp-validation-for="ProductVM.ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.QuantityPerUnit" class="control-label"> Quantity/Unit</label>
                            <input asp-for="ProductVM.QuantityPerUnit" class="form-control" />
                            <span asp-validation-for="ProductVM.QuantityPerUnit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.UnitPrice" class="control-label">Unit Price</label>
                            <input asp-for="ProductVM.UnitPrice" class="form-control" />
                            <span asp-validation-for="ProductVM.UnitPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.UnitsInStock" class="control-label">Units in Stock</label>
                            <input asp-for="ProductVM.UnitsInStock" class="form-control" />
                            <span asp-validation-for="ProductVM.UnitsInStock" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.UnitsOnOrder" class="control-label">Units on Order</label>
                            <input asp-for="ProductVM.UnitsOnOrder" class="form-control" />
                            <span asp-validation-for="ProductVM.UnitsOnOrder" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.ReorderLevel" class="control-label">Reorder Level</label>
                            <input asp-for="ProductVM.ReorderLevel" class="form-control" />
                            <span asp-validation-for="ProductVM.ReorderLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ProductVM.Discontinued" /> @Html.DisplayNameFor(model => model.ProductVM.Discontinued)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductVM.CategoryId" class="control-label">Category</label>
                            <select asp-for="ProductVM.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="ProductVM.CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


