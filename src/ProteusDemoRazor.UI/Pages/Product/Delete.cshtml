@page
@model Proteus.UI.Pages.Product.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<div class="container-fluid">
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Product</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label for="ProductVM.ProductName" class="control-label">Product Name</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.QuantityPerUnit" class="control-label"> Quantity/Unit</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.QuantityPerUnit)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.UnitPrice" class="control-label">Unit Price</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.UnitPrice)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.UnitsInStock" class="control-label">Units in Stock</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.UnitsInStock)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.UnitsOnOrder" class="control-label">Units on Order</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.UnitsOnOrder)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.ReorderLevel" class="control-label">Reorder Level</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.ReorderLevel)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.Discontinued" class="control-label">Discontinued</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.Discontinued)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="ProductVM.CategoryId" class="control-label">Category</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductVM.Category.CategoryName)
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <form method="post">
        <input type="hidden" asp-for="ProductVM.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


